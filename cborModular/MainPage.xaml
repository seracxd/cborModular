<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="cborModular.MainPage">

    <ContentPage.Content>
        <StackLayout Padding="20" Spacing="20">

            <!-- Nadpis -->
            <Label Text="Motorcycle Data"
                   FontSize="24"
                   HorizontalOptions="Center"
                   VerticalOptions="CenterAndExpand" />

            <!-- Zobrazení rychlosti -->
            <Label x:Name="SpeedLabel"
                   Text="Speed: N/A"
                   FontSize="18"
                   HorizontalOptions="Center"
                   VerticalOptions="CenterAndExpand" />

            <!-- Další parametry (např. Throttle) -->
            <Label x:Name="ThrottleLabel"
                   Text="Throttle: N/A"
                   FontSize="18"
                   HorizontalOptions="Center"
                   VerticalOptions="CenterAndExpand" />

            <Label x:Name="TimeLabel"                  
                   FontSize="18"
                   HorizontalOptions="Center"
                   VerticalOptions="CenterAndExpand" />
            
            <Button Text="Scan For Devices" Clicked="OnScanButtonClicked"/>

            <Button Text="Scan For Devices" Clicked="OnConnectButtonClicked"/>

        </StackLayout>
    </ContentPage.Content>

</ContentPage>
